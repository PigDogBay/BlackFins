<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <EditTextPreference
        android:defaultValue="@string/pref_default_plc_ip_address"
        android:inputType="textUri"
        android:key="@string/key_pref_plc_ip_address"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_plc_ip_address" />
    <EditTextPreference
        android:defaultValue="@string/pref_default_plc_port"
        android:inputType="number"
        android:key="@string/key_pref_plc_port"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_plc_port" />

</PreferenceScreen>